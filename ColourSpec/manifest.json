{
  "manifest_version": 2,

  "name": "ColourSpec",
  "description": "For all your custom styles.",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["background.js", "jquery-2.0.3.min.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  // Added for underscore to eval strings
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
